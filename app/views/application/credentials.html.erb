<p><%= "A username and password are being requested by #{session[:domain]}."  %></p>
<% form_tag "/" do %>
  <p>
    User Name:
    <%= text_field_tag :basic_auth_username  %>
  </p>
  <p>
    Password:
    <%= password_field_tag :basic_auth_password  %>
  </p>
  <p>
    <%= submit_tag "Submit"  %>
    <%= link_to "Cancel", clear_session_path  %>
  </p>
<% end %>